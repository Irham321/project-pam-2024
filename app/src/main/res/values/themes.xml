<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Appscal" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorSecondary">@color/deep_creme</item>
        <item name="colorSecondaryVariant">@color/creme</item>
        <item name="colorOnSecondary">@color/blue</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_two</item>
        <item name="colorOnPrimary">@color/creme</item>
    </style>

    <style name="Theme.Appscal" parent="Base.Theme.Appscal">
        <item name="android:textViewStyle">@style/DefaultFontFamily</item>
    </style>

    <style name="DefaultFontFamily" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="FullscreenDialog" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item></style>

    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.RectangleCornerRadius12" parent="">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerSizeBottomLeft">12dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerSizeTopLeft">12dp</item></style>

</resources>